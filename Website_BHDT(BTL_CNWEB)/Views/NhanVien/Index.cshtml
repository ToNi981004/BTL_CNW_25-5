
@{
    ViewBag.Title = "Tables";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using Website_BHDT_BTL_CNWEB_.Models.MD_Entities;
@model  List<NhanVien>

<body>

    <div id="wrapper">

        <!-- Navigation -->


        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Nhân Viên</h1>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <a class="btn btn-block btn-social btn-pinterest" href="/SanPham/Create">
                                    <font style="vertical-align: inherit;">
                                        <font style="vertical-align: inherit;">
                                            <i class="fa fa-user-plus"></i>     Thêm Mới
                                        </font>
                                    </font>
                                </a>
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Họ Tên</th>
                                                <th>Giới Tính</th>
                                                <th>Chức Vụ</th>
                                                <th>Số Điện Thoại</th>
                                            
                                                <th></th>
                                                <th></th>
                                    
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (NhanVien nv in Model)
                                            {

                                                <tr class="odd gradeX">
                                                    <td>
                                                        <a href="/SanPham/ProductInformation?id=@nv.IDNhanVien">  @nv.IDNhanVien </a>
                                                    </td>
                                                    <td>
                                                        <a href="/SanPham/ProductInformation?id=@nv.IDNhanVien">  @nv.TenNhanVien </a>
                                                    </td>
                                                    <td>
                                                        <a href="/SanPham/ProductInformation?id=@nv.IDNhanVien">  @nv.GioiTinh_NV </a>
                                                    </td>
                                                    <td>
                                                        <a href="/SanPham/ProductInformation?id=@nv.IDNhanVien">  @nv.ChucVu  </a>
                                                    </td>
                                                    <td class="=center">
                                                        <a href="/SanPham/ProductInformation?id=@nv.IDNhanVien">  @nv.SDT_NV </a>
                                                    </td>
                                                 
                                                    <td>
                                                        <a href="/SanPham/ProductInformation?id=@nv.IDNhanVien"><i class="fa fa-trash"></i></a>
                                                    </td>
                                                    <td>
                                                        <a href="/SanPham/ProductInformation?id=@nv.IDNhanVien"><i class="fa fa-edit"></i></a>
                                                    </td>
                                                    
                                                </tr>
                                            }


                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.table-responsive -->
                                <div class="well">
                                    <h4>Cơ Sở Dữ Liệu</h4>
                                    <p>Mời bạn xem chi tiết về các tài liệu liên quang đến cơ sở dữ liệu cửa hàng điện thoại</p>
                                    <a class="btn btn-default btn-lg btn-block" target="_blank" href="/Admin/DatabaseDocumentation">View Database Documentation</a>
                                </div>
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                <!-- /.row -->
                <!-- /.row -->
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
</body>

