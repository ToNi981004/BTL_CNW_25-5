
@{
    ViewBag.Title = "NguoiDung";
    Layout = "~/Views/Shared/_LayoutNguoiDung.cshtml";
}
@using Website_BHDT_BTL_CNWEB_.Models.MD_Entities;
@model  KhachHang

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Hồ Sơ</h1>
                @*Biểu tượng người*@
            </div>
            <div class="hero-widget well well-sm">
                <div class="icon">
                    <i class="glyphicon glyphicon-user"></i>
                </div>
                <div class="text">
                    <span class="value"><i class="fa fa-github-alt"></i>@Model.IDKhachHang</span>

                </div>

            </div>
            @*Đổi Mật Khẩu*@

            <div class="panel panel-yellow">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <i class="fa fa-edit"></i>    Đổi Mật Khẩu
                    </h4>
                </div>
                <form action="/KhachHang/DoiMatKhau" method="post">
                    <div id="collapseOne" class="panel-collapse collapse in">
                        
                        <div class="form-group">
                            <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Tên Tài Khoản:</font></font></label>
                            <input class="form-control" value="@Model.IDKhachHang" name="IDKhachHang">
                        </div>
                        <div class="form-group">
                            <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Mật Khẩu Cũ:</font></font></label>
                            <input @*type="password"*@ class="form-control" placeholder="old password" name="MatKhau">
                        </div>
                        <div>
                            @TempData["msg7"]
                        </div>
                        <div class="form-group">
                            <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Mật Mới:</font></font></label>
                            <input class="form-control" placeholder="new password" name="MK1">
                        </div>
                        <div class="form-group">
                            <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Nhập Lại Mật Khẩu:</font></font></label>
                            <input class="form-control" placeholder="password again" name="MK2">
                        </div>
                        <div>
                            @TempData["msg8"]
                        </div>
                        <div>
                            <button type="submit" class="btn btn-outline btn-primary btn-lg btn-block"><font style="vertical-align: inherit;"> <font style="vertical-align: inherit;"><i class="fa fa-save"></i>    Lưu</font></font></button>
                        </div>

                    </div>
                </form>
                

            </div>
            
                @*Thông Tin người dùng*@
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <i class="fa fa-outdent"></i>   Thông Tin
                        </h4>
                        <h4 class="panel-title">
                            @ViewBag.ThongBaoLoi
                        </h4>
                    </div>
                    <form action="/KhachHang/CapNhatKH" method="post">
                        <div id="collapseOne" class="panel-collapse collapse in">
                            <div class="form-group">
                                <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Tên Tài Khoản:</font></font></label>
                                <input class="form-control" placeholder="Chú ý: Là Tên Của Bạn Khi Nhận Hàng." value="@Model.IDKhachHang" name="IDKhachHang">
                            </div>
                            <div class="form-group">
                                <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Họ :</font></font></label>
                                <input class="form-control" placeholder="Họ đệm" value="@Model.Ho" name="Ho">
                            </div>
                            <div class="form-group">
                                <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Tên:</font></font></label>
                                <input class="form-control" placeholder="Chú ý: Là Tên Của Bạn Khi Nhận Hàng." value="@Model.Ten" name="Ten">
                            </div>
                            <div class="form-group">
                                <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Giới Tính:</font></font></label>
                                <input class="form-control" placeholder="giới tính" value="@Model.GioiTinh_KH" name="GioiTinh_KH">
                            </div>
                            <div class="form-group">
                                <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Số Điện Thoại:</font></font></label>
                                <input class="form-control" placeholder="số điện thoại" value="@Model.SDT_KH" name="SDT_KH">
                            </div>
                            <div class="form-group">
                                <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Địa Chỉ:</font></font></label>
                                <input class="form-control" placeholder="địa chỉ" value="@Model.DiaChi_KH" name="DiaChi_KH">
                            </div>
                            <div class="form-group">
                                <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Quận/Huyện:</font></font></label>
                                <input class="form-control" placeholder="quận - huyện" value="@Model.Quan" name="Quan">
                            </div>
                            <div class="form-group">
                                <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Thành Phố:</font></font></label>
                                <input class="form-control" placeholder="thành phố" value="@Model.ThanhPho" name="ThanhPho">
                            </div>
                            <div class="form-group">
                                <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Tên Công Ty:</font></font></label>
                                <input class="form-control" placeholder="tên công ty" value="@Model.TenCongTy" name="TenCongTy">
                            </div>
                            <div class="form-group">
                                <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Địa chỉ Email:</font></font></label>
                                <input class="form-control" placeholder="Email" value="@Model.DiaChiEmail" name="DiaChiEmail">
                            </div>
                            <div>
                                <button type="submit" class="btn btn-outline btn-primary btn-lg btn-block"><font style="vertical-align: inherit;"> <font style="vertical-align: inherit;"><i class="fa fa-save"></i>    Cập Nhật Thông Tin Của Bạn</font></font></button>
                            </div>
                        </div>
                    </form>
                    
                </div>
         

            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
