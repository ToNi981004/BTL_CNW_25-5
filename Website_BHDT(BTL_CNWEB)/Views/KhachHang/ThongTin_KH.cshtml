
@{
    ViewBag.Title = "ThongTin_KH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using Website_BHDT_BTL_CNWEB_.Models.MD_Entities;
@model  KhachHang

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Hồ Sơ</h1>
                @*Biểu tượng người*@
            </div>
            <div class="hero-widget well well-sm">
                <div class="icon">
                    <i class="glyphicon glyphicon-user"></i>
                </div>
                <div class="text">
                    <span class="value"><i class="fa fa-github-alt"></i>@Model.IDKhachHang</span>

                </div>

            </div>
            @*Đổi Mật Khẩu*@
            
            @*Thông Tin người dùng*@
            <div class="panel panel-green">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <i class="fa fa-outdent"></i>   Thông Tin
                    </h4>
                </div>
                <div id="collapseOne" class="panel-collapse collapse in">
                 
                    <div class="form-group">
                        <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Tên Tài Khoản:</font></font></label>
                        <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="họ tên" value="@Model.IDKhachHang">
                    </div>
                    <div class="form-group">
                        <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Giới Tính:</font></font></label>
                        <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="giới tính" value="@Model.GioiTinh_KH">
                    </div>
                    <div class="form-group">
                        <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Số Điện Thoại:</font></font></label>
                        <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="số điện thoại" value="@Model.SDT_KH">
                    </div>
                    <div class="form-group">
                        <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Địa Chỉ:</font></font></label>
                        <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="địa chỉ" value="@Model.DiaChi_KH">
                    </div>
                    <div class="form-group">
                        <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Quận/Huyện:</font></font></label>
                        <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="quận - huyện" value="@Model.Quan">
                    </div>
                    <div class="form-group">
                        <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Thành Phố:</font></font></label>
                        <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="thành phố" value="@Model.ThanhPho">
                    </div>
                    <div class="form-group">
                        <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Tên Công Ty:</font></font></label>
                        <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="tên công ty" value="@Model.TenCongTy">
                    </div>
                    <div class="form-group">
                        <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Địa chỉ Email:</font></font></label>
                        <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="Email" value="@Model.DiaChiEmail">
                    </div>
                    
                </div>
            </div>

            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>


