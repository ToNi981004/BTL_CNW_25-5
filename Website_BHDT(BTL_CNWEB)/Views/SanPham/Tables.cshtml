
@{
    ViewBag.Title = "Tables";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using Website_BHDT_BTL_CNWEB_.Models.MD_Entities;
@model  List<SanPham>

<body>

    <div id="wrapper">

        <!-- Navigation -->


        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Sản Phẩm</h1>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <a class="btn btn-block btn-social btn-pinterest" href="/SanPham/Create">
                                    <font style="vertical-align: inherit;">
                                        <font style="vertical-align: inherit;">
                                            <i class="fa fa-mobile-phone"></i>   Thêm Mới Sản Phẩm
                                        </font>
                                    </font>
                                </a>
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead>
                                            <tr>
                                                <th>Tên Sản Phẩm</th>
                                                <th>Hãng</th>
                                                <th>Xuất Xứ</th>
                                                <th>Hệ Điều Hành</th>
                                                <th>Số Lượng Tồn</th>
                                                <th>Giá Bán</th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (SanPham sp in Model)
                                            {

                                                <tr class="odd gradeX">
                                                    <td>
                                                        <a href="/SanPham/ProductInformation?id=@sp.IDSanPham">  @sp.TenSanPham  </a>
                                                    </td>
                                                    <td>
                                                        <a href="/SanPham/ProductInformation?id=@sp.IDSanPham">  @sp.Hang  </a>
                                                    </td>
                                                    <td>
                                                        <a href="/SanPham/ProductInformation?id=@sp.IDSanPham">  @sp.XuatXu  </a>
                                                    </td>
                                                    <td>
                                                        <a href="/SanPham/ProductInformation?id=@sp.IDSanPham">  @sp.HeDieuHanh   </a>
                                                    </td>
                                                    <td class="=center">
                                                        <a href="/SanPham/ProductInformation?id=@sp.IDSanPham">  @sp.SoLuongTon  </a>
                                                    </td>
                                                    <td class="=center">
                                                        <a href="/SanPham/ProductInformation?id=@sp.IDSanPham">  @sp.DonGiaB   </a>
                                                    </td>
                                                    <td>
                                                        <a href="/SanPham/Delete_SanPham/?IDSanPham=@sp.IDSanPham"><i class="fa fa-trash"></i></a>
                                                    </td>
                                                    <td>
                                                        <a href="/SanPham/Edit_SanPham?IDSanPham=@sp.IDSanPham"><i class="fa fa-edit"></i></a>
                                                    </td>
                                                    <td>
                                                        <a href="/SanPham/ProductInformation?id=@sp.IDSanPham"><i class="fa fa-cogs"></i></a>
                                                    </td>
                                                </tr>
                                            }


                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.table-responsive -->
                                <div class="well">
                                    <h4>DataTables Usage Information</h4>
                                    <p>DataTables is a very flexible, advanced tables plugin for jQuery. In SB Admin, we are using a specialized version of DataTables built for Bootstrap 3. We have also customized the table headings to use Font Awesome icons in place of images. For complete documentation on DataTables, visit their website at <a target="_blank" href="https://datatables.net/">https://datatables.net/</a>.</p>
                                    <a class="btn btn-default btn-lg btn-block" target="_blank" href="https://datatables.net/">View DataTables Documentation</a>
                                </div>
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                <!-- /.row -->
                <!-- /.row -->
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
</body>

