
@{
    ViewBag.Title = "cart";
    Layout = "~/Views/Shared/_LayoutNguoiDung.cshtml";
}
@using Website_BHDT_BTL_CNWEB_.Models.MD_Entities
@model  List<CartItem>

<body>
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Giỏ Hàng Của Bạn</h1>
                </div>
                <!-- /.col-lg-12 -->
                @foreach(CartItem item in Model)
                {
                    <div class="col-lg-4">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                @item.TenSanPham
                            </div>
                            <div class="panel-body">
                                <img src="@item.Anh" width="200" height="200" /><br />
                                <a href="#" class="btn btn-default btn-lg"><i class="fa fa-credit-card-alt">Thanh Toán</i></a>
                                <a href="/GioHang/XoaKhoiGio/?IDSanPham=@item.IDSanPham" class="btn btn-default btn-lg"><i class="fa fa-trash">Xóa Sản Phẩm</i></a>
                            </div>
                            <div class="panel-footer">
                                <b>Giá Bán:</b>@item.DonGiaB.GetValueOrDefault(0).ToString("N0")<i class="fa fa-dollar"> </i> 
                                 <b>SỐ Lượng:  @item.SoLuong</b>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>

</body>

